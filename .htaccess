# Enable mod_rewrite
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Set RewriteBase to match your deployment directory
  # If deployed at root, use: RewriteBase /
  # If deployed in subdirectory, use: RewriteBase /subdirectory/
  RewriteBase /

  # Allow direct access to existing files and directories
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Rewrite all other requests to index.html
  # This allows React Router to handle client-side routing
  RewriteRule ^ index.html [QSA,L]
</IfModule>

# Add proper MIME types for modern web assets
<IfModule mod_mime.c>
  AddType application/javascript .js
  AddType application/javascript .mjs
  AddType text/css .css
  AddType image/svg+xml .svg
  AddType application/manifest+json .webmanifest
  AddType application/vnd.ms-fontobject .eot
  AddType font/ttf .ttf
  AddType font/otf .otf
  AddType font/x-woff .woff
  AddType font/x-woff2 .woff2
</IfModule>

# Set proper caching headers for different file types
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Cache HTML files for 1 hour
  ExpiresByType text/html "access plus 1 hour"
  
  # Cache assets (JS, CSS, images, fonts) for 1 year
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/otf "access plus 1 year"
  ExpiresByType font/x-woff "access plus 1 year"
  ExpiresByType font/x-woff2 "access plus 1 year"
  
  # Default expiration for everything else
  ExpiresDefault "access plus 2 days"
</IfModule>

# Gzip compression for better performance
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Security headers
<IfModule mod_headers.c>
  # Prevent clickjacking
  Header set X-Frame-Options "SAMEORIGIN"
  
  # Prevent MIME type sniffing
  Header set X-Content-Type-Options "nosniff"
  
  # Enable XSS protection
  Header set X-XSS-Protection "1; mode=block"
  
  # Referrer policy
  Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Remove server signature for security
ServerTokens Prod
ServerSignature Off
